{
  "$schema": "vscode://schemas/color-theme",
  "name": "Verglas",
  "semanticHighlighting": false,
  "tokenColors": [

    // Primative Objects and Keywords
    {
      "name": "Variable",
      "scope": [
        "variable",
        "variable.other.local",
        "variable.other.global"
      ],
      "settings": {
        "foreground": "#aec2e0", // "#aec2e0" #dff1fa "#11d358"
        "fontStyle": ""
      }
    },
    {
			"name": "String",
			"scope": [
        "string",
        "punctuation.definition.string"
      ],
			"settings": {
				"foreground": "#6ee2ff"
			}
    },
    {
      "name": "Escape Character",
      "scope": "constant.character.escape",
      "settings": {
        "foreground": "#11cfff",
        "fontStyle": "bold"
      }
    },
    {
			"name": "Number",
			"scope": "constant.numeric",
			"settings": {
				"foreground": "#6ee2ff"
			}
    },
    {
      "name": "Punctuation",
      "scope": "punctuation",
      "settings": {
        "foreground": "#aec2e0",
        "fontStyle": ""
      }
    },
    {
			"name": "Constants",
			"scope": "constant.language",
			"settings": {
				"foreground": "#ec43e4"
			}
    },
    {
			"name": "Control Flow Keywords",
			"scope": "keyword.control",
			"settings": {
        "foreground": "#5cb0f2" // "#6bd8ff" "#42b3ff"
			}
    },
    {
      "name": "Operator Keyword",
      "scope": "keyword.other.operator.overload",
      "settings": {
        "foreground": "#6bd8ff"
      }
    },
    {
      "name": "Comparison/Assignment Operators",
      "scope": [
        "keyword.operator",
        "keyword.operator.assignment", 
        "keyword.operator.comparison"
      ],
      "settings": {
        "foreground": "#5cb0f2",
        "fontStyle": ""
      }
    },
    {
			"name": "New / Delete Keywords",
			"scope": [
        "keyword.operator.new",
        "keyword.operator.delete"
      ],
			"settings": {
				"foreground": "#f700c1" // "#6bd8ff" #921176
			}
    },
    
    // Storage
    {
			"name": "Storage",
			"scope": "storage",
			"settings": {
				"fontStyle": "",
				"foreground": "#6bd8ff"
			}
    },
    {
      "scope": "entity.name.type",
      "settings": {
        "foreground": "#00fcf2",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Storage Type",
      "scope": [
        "storage.type",
        "entity.name.type.template",
        "entity.name.type.parameter"
      ],
      "settings": {
        "foreground": "#00aaff",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Async Modifier",
      "scope": "storage.modifier.async",
      "settings": {
        "foreground": "#00aaff", // "#6bd8ff"
        "fontStyle": "italic"
      }
    },
    {
      "name": "Type",
      "scope": "support.type",
      "settings": {
        "foreground": "#00fcf2",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Support",
      "scope": "support.class",
      "settings": {
        "foreground": "#00fcf2",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Pointer / Reference",
      "scope": [
        "storage.modifier.reference",
        "storage.modifier.pointer"
      ],
      "settings": {
        "foreground": "#921176", //"#7f6ade" "#ff9100" "#40db6e"
        "fontStyle": "italic"
      }
    },
    {
      "name": "Item Access",
      "scope": [
        "meta.item-access.arguments",
        "meta.bracket.square.access"
      ],
      "settings": {
        "foreground": "#aec2e0"
      }
    },
    // {
    //   "name": "Member Function", // Seems to override specific styling for constructors/destructors
    //   "scope": "entity.name.function.member",
    //   "settings": {
    //     "foreground": "#FF0000" "#dff1fa"
    //   }
    // },

    // Functions
    {
			"name": "Function Declaration",
			"scope": "entity.name.function.definition",
			"settings": {
        "foreground": "#84eeee",
        "fontStyle": "italic"
			}
    },
    {
      "name": "Function Call",
      "scope": [
        "entity.name.function.call",
        "meta.function-call.generic",
        "meta.function-call"
      ],
      "settings": {
        "foreground": "#dff1fa",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Function Parameter",
      "scope": "variable.parameter",
      "settings": {
        "foreground": "#7f6ade"
      }
    },
    {
      "name": "Function Arguments",
      "scope": "meta.function-call.arguments",
      "settings": {
        "foreground": "#aec2e0",
        "fontStyle": ""
      }
    },
    {
      "name": "Built-in Function",
      "scope": "support.function",
      "settings": {
        "foreground": "#267fb5",
        "fontStyle": ""
      }
    },
    // Templates
    {
      "name": "Typename",
      "scope": [
        "storage.type.template.argument.typename",
        "storage.type.template.argument.class"
      ],
      "settings": {
        "foreground": "#7f6ade",
        "fontStyle": "italic"
      }
    },
    {
      "name": "String Template / Template Literal",
      "scope": ["meta.embedded.line", "meta.embedded.line variable.other.readwrite"],
      "settings": {
        "foreground": "#dfebf0",
        "fontStyle": "bold"
      }
    },


    // Objects
    {
      "name": "Class",
      "scope": "entity.name.type.class",
      "settings": {
        "foreground": "#0efff3"
      }
    },
    {
      "name": "Struct",
      "scope": "entity.name.type.struct",
      "settings": {
        "foreground": "#0efff3"
      }
    },
    {
      "name": "Namespace",
      "scope": "entity.name.namespace",
      "settings": {
        "foreground": "#0efff3"
      }
    },
    {
      "name": "Class Constructor",
      "scope": "entity.name.function.definition.special.constructor",
      "settings": {
        "foreground": "#16a129",
        "fontStyle": "bold"
      }
    },
    {
			"name": "Class Destructor",
			"scope": "entity.name.function.definition.special.member.destructor",
			"settings": {
        "foreground": "#9b0e0e",
        "fontStyle": "bold"
			}
		},
    {
      "name": "Visibility (Public/Private)",
      "scope": "storage.type.modifier.access.control",
      "settings": {
        "foreground": "#6bd8ff"
      }
    },
    {
      "name": "Object Property",
      "scope": [
        "variable.other.object.property",
        "variable.other.property"
      ],
      "settings": {
        "foreground": "#aec2e0",
        "fontStyle": ""
      }
    },

    // Symbols
    {
      "name": "Logical Operators",
      "scope": "keyword.operator.logical",
      "settings": {
        "foreground": "#516de0"
      }
    },
    {
      "name": "Operators",
      "scope": "entity.name.operator",
      "settings": {
        "foreground": "#FF0000",
        "fontStyle": "bold"
      }
    },

    // Misc
    {
      "name": "Comments",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#324357"
      }
    },
    {
			"name": "Bitshift",
			"scope": "keyword.operator.bitwise.shift",
			"settings": {
				"foreground": "#6bd8ff"
			}
    },
    {
			"name": "Namespace",
			"scope": [
        "entity.name.scope-resolution",
        "punctuation.separator.scope-resolution", 
				"punctuation.separator.namespace.access"
      ],
			"settings": {
				"foreground": "#0efff3",
				"fontStyle": "italic"
      }
    },
    {
      "name": "Generator Asterisk",
      "scope": "keyword.generator.asterisk",
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
			"name": "Preprocessor Statements", 
			"scope": [
        "keyword.control.directive", 
        "punctuation.definition.directive"
      ],
			"settings": {
				"foreground": "#5CB0F2"
			}
    },
    {
      "name": "Units",
      "scope": "keyword.other.unit.suffix",
      "settings": {
        "foreground": "#ec43e4"
      }
    },
    
    // Language-Specific Rules, Adjustments to Improperly Detected Scopes
    {
      "name": "Function Declaration - Python, JavaScript",
      "scope": [
        "entity.name.function.python",
        "meta.definition.function entity.name.function.js"
      ],
      "settings": {
        "foreground": "#84eeee",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Function Parameter - C, C++, Java",
      "scope": [
        "variable.parameter.c",
        "variable.parameter.cpp",
        "variable.parameter.java"
      ],
      "settings": {
        "foreground": "#aec2e0", // #dff1fa
        "fontStyle": ""
      }
    }
  ],

